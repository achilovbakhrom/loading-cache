{
  "name": "loading-cache",
  "version": "0.1.0",
  "description": "Loading Cache Implementation for JS",
  "main": "index.js",
  "scripts": {
    "all": "run-s lint cover build",
    "test": "jest",
    "cover": "jest --coverage --no-cache",
    "codecov": "codecov -f ./coverage/lcov.info",
    "lint": "tslint \"src/**/**.ts\"",
    "format": "prettier --write \"src/**/**.ts\"",
    "build": "run-s build:*",
    "build:es": "rimraf ./es && rollup -c ./rollup.config.js",
    "build:lib": "rimraf ./lib && tsc --project tsconfig.lib.json",
    "build:node": "rimraf ./node && tsc --project tsconfig.node.json",
    "report": "opener ./coverage/lcov-report/index.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/achilovbakhrom/loading-cache.git"
  },
  "keywords": [
    "rxjs",
    "cache",
    "promise",
    "memoization"
  ],
  "author": "mailbak36",
  "license": "MIT",
  "homepage": "https://github.com/achilovbakhrom/loading-cache#readme",
  "dependencies": {
    "tslib": "^1.7.0"
  },
  "optionalDependencies": {
    "rxjs": "^5.5.0"
  },
  "devDependencies": {    
    "npm-run-all": "^4.1.1",    
    "tslint": "^5.7.0",
    "typescript": "^2.5.2"
  }
}
